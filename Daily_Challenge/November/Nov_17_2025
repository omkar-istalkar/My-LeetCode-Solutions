class Solution:
    def kLengthApart(self, nums: List[int], k: int) -> bool:
        is_prev_x = False
        pre_dist = 0
        for x in nums:
            if x == 1 and pre_dist != 0:
                is_prev_x = True
                if pre_dist < k :
                    return False
                pre_dist = 0
            elif x == 1 and pre_dist == 0 and is_prev_x:
                is_prev_x = True
                if pre_dist < k :
                    return False
                    
            elif x == 1 and pre_dist == 0:
                is_prev_x = True
            
            if is_prev_x and x != 1:
                pre_dist += 1
        
        return True
