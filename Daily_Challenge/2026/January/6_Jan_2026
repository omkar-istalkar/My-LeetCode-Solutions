class Solution:
    def maxLevelSum(self, root: Optional[TreeNode]) -> int:
        maxSum, out, level = float("-inf"), 0, 0

        q = collections.deque()
        q.append(root)

        while q:
            level += 1
            currSum = 0
            for _ in range(len(q)):
                node = q.popleft()
                currSum += node.val

                if node.left:
                    q.append(node.left)

                if node.right:
                    q.append(node.right)

            if maxSum < currSum:
                maxSum, out = currSum, level
        
        return out
