class Solution:
    def numOfWays(self, n: int) -> int:
        MOD = 10**9+7

        pat1 = 6
        pat2 = 6

        for i in range(n-1):
            nextpat1 = (3*pat1 + 2*pat2) % MOD
            nextpat2 = (2*pat1 + 2*pat2) % MOD
            pat1 = nextpat1
            pat2 = nextpat2

        return(pat1+pat2)%MOD
